#!/bin/bash

if [ -z "$TMPDIR" ]; then
	TMPDIR=/tmp
fi

if [ $# -lt 2 ]; then
	echo $0 '<references> <destination> [git arguments]'
	echo '<references>      append References: line with this argument (can be "nop")'
	echo '<destination>     destination directory (can be user@machine:dir)'
	echo "<git arguments>   what's passed to git"
	echo
	echo Examples:
	echo $0 'bnc#12345 /tmp -1 0ea859964fcba'
	echo $0 'nop krtek@machine.org:/tmp v0.1..v0.2'
	exit 1
fi


REF="$1"
shift
MACHINE="$1"
shift

PATCHES=$TMPDIR/patches
GITARGS="-o $PATCHES -s -k --add-header 'Patch-mainline: no'"
if [ "$REF" != "nop" ]; then
	GITARGS="$GITARGS --add-header 'References: $REF'"
fi

rm -rf $PATCHES

eval git format-patch $GITARGS $@ || exit 1

for patch in $PATCHES/*; do
	SHA=`head -1 $patch|sed 's/^From \([0-9a-fA-F]*\) .*$/\1/'`
	MAINLINE=`git name-rev --refs=refs/tags/v[23].* $SHA|sed 's@^.*tags/\([a-zA-Z0-9\.-]*\).*$@\1@'`
	sed -ni "2,$ p" $patch
	if ! echo "$MAINLINE"|grep -q undefined; then
		sed -i "s/^Patch-mainline: no$/Git-commit: $SHA\nPatch-mainline: $MAINLINE/" $patch
	fi
done

if [ "$MACHINE" != "nop" ]; then
	scp -o StrictHostKeyChecking=no -C $PATCHES/* $MACHINE || exit 1
	echo Copied to $MACHINE

	rm -rf $PATCHES
fi
