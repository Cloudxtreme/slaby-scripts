#!/bin/bash

set -xxe

. /etc/os-release

if [ "x$VERSION" = "x12" ]; then
	sudo zypper ar -f http://dist.suse.de/ibs/SUSE:/Tools/SLE_12/SUSE:Tools.repo 2>/dev/null || true
fi

sudo zypper in --no-rec cscope quilt osc build gcc git-core make obs-service-tar_scm obs-service-recompress obs-service-set_version 
