#!/bin/bash

if [ $# -lt 1 ]; then
	echo $0 '<file.img> [qemu arguments]'
	exit 1
fi

if [ -z "$TMPDIR" ]; then
	TMPDIR=/tmp
fi

SCR=$TMPDIR/qemu.$RANDOM
rm -f $SCR >/dev/null 2>&1

FILE=$1
shift

MEM=`grep 'MemTotal:' /proc/meminfo|sed 's/^.*: *\([0-9]*\) *kB$/\1/'`
MEM=$(($MEM/5/1024))

if [ $MEM -lt 100 ]; then
	MEM=100
fi

qemu-kvm -k en-us -usbdevice tablet -balloon virtio -hda $FILE -smp 2 -m $MEM -net user -net nic,model=e1000 -usb -serial pty "$@" 2>$SCR &
QEMU=$!

while ! grep -q 'redirected to' $SCR; do
	usleep 100000
done

screen `sed -ne '/redirected to / s/.* // p' $SCR`

rm -f $SCR

wait $QEMU
