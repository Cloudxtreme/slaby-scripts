#!/bin/bash

function show_pkg {
	xdg-open "https://build.opensuse.org/package/show?package=$2&project=$1"
}

function show_prj {
	xdg-open "https://build.opensuse.org/project/monitor?project=$1"
}

if [ $# -eq 1 ]; then
	case "$1" in
	*/*)
		show_pkg ${1%/*} ${1#*/}
		;;
	*)
		show_prj $1
		;;
	esac
elif [ $# -eq 2 ]; then
	show_pkg $1 $2
else
	exit 1
fi
