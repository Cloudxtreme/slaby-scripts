#!/bin/bash

# for +() in request
shopt -s extglob

if [ "x$1" = "x-i" ]; then
	BS=build.suse.de
	shift
else
	BS=build.opensuse.org
fi

function filter {
	echo "$@" | sed '
		s/+/%2B/g
		'
}

function show_req {
	xdg-open "https://$BS/request/show/$1"
}

function show_pkg {
	PRJ=`filter $1`
	PKG=`filter $2`
	xdg-open "https://$BS/package/show?package=$PKG&project=$PRJ"
}

function show_prj {
	PRJ=`filter $1`
	xdg-open "https://$BS/project/monitor?project=$PRJ"
}

if [ $# -eq 1 ]; then
	case "$1" in
	+([0-9]))
		show_req "$1"
		;;
	*/*)
		show_pkg "${1%/*}" "${1#*/}"
		;;
	*)
		show_prj "$1"
		;;
	esac
elif [ $# -eq 2 ]; then
	show_pkg "$1" "$2"
else
	exit 1
fi
